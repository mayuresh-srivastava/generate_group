<%= simple_form_for(UserGroup.new, url: invitation_response_group_path) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :response, as: :radio_buttons, collection: [['1', 'Yes'],['0', 'No']], label_method: :second, value_method: :first,  input_html: { type: :radio}, wrapper: false, label_html: {class: "label"} %>
  </div>
</div>
<%= f.button :submit, 'Submit', class: "button is-info" %>
<% end %>
